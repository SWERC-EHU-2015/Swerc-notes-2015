vvi graph(V, vi());

int source;

vi marcas(V, -1);
queue<int> q;
marcas[source] = 0;		//marcas[i] nos dar√° la distancia de source a ese nodo
q.push(source);
	
while(!q.empty()) {
	int top = q.front();
	q.pop();
	
	for (int i = 0; i < graph[top].size(); ++i) {
		if (marcas[graph[top][i]] == -1) {
			marcas[graph[top][i]] = marcas[top] + 1;
			q.push(graph[top][i]);
		}
	}
}
